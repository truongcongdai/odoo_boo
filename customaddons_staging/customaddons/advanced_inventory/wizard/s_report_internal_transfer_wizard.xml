<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="s_report_internal_transfer_wizard_view_form" model="ir.ui.view">
            <field name="name">s_report_internal_transfer_view_form</field>
            <field name="model">s.report.internal.transfer.wizard</field>
            <field name="arch" type="xml">
                <form string="#Báo cáo chênh lệch điều chuyển">
                    <sheet>
                        <group>
                            <group>
                                <field name="date_from" required="1"/>
                            </group>
                            <group>
                                <field name="date_to"  required="1"/>
                            </group>
                        </group>
                    <footer>
                        <button name="confirm_export" type="object" string="Xác nhận"
                                class="oe_highlight"/>
                        <button string="Huỷ" type="object" class="oe_highlight" special="cancel"/>
                    </footer>
                    </sheet>
                </form>
            </field>

        </record>
        <record id="s_report_internal_transfer_wizard_view_action" model="ir.actions.act_window">
            <field name="name">#Báo cáo chênh lệch điều chuyển</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">s.report.internal.transfer.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="s_report_internal_transfer_menuitem" name="# Báo cáo chênh lệch điều chuyển"
                  parent="stock.menu_warehouse_report" action="s_report_internal_transfer_wizard_view_action" sequence="200"/>

    </data>
</odoo>