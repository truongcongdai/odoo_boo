<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_set_pos_program_form" model="ir.ui.view">
            <field name="name">action.set.pos.program.form</field>
            <field name="model">action.set.pos.program</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="program_ids" widget="many2many_tags"
                                   domain="[('program_type','=','promotion_program')]"
                                   options='{"no_open": True, "no_create": True}'/>
                            <field name="coupon_ids" widget="many2many_tags"
                                   domain="[('program_type','=','coupon_program')]"
                                   options='{"no_open": True, "no_create": True}'/>
                            <field name="pos_config_id" invisible="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" type="object"
                                string="Xác nhận" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>