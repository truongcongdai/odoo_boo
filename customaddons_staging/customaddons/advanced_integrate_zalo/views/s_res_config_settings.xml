<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="s_res_config_settings_view" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_general_settings']" position="after">
                <h2>Zalo Integrating</h2>
                <div class="col-xs-12 row o_settings_container" id="website_info_settings">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_right_pane border-start-0">
                            <div class="content-group">
                                <div class="row mt8">
                                    <label class="col-lg-3" string="Client ID" for="s_zalo_app_id"/>
                                    <field name="s_zalo_app_id" title="Provide the Client ID here " password="True"/>
                                </div>
                                <div class="row mt8">
                                    <label class="col-lg-3" string="Client Secret" for="s_zalo_app_secret"/>
                                    <field name="s_zalo_app_secret" title="Provide the Client Secret here" password="True"/>
                                </div>

                                <div class="row mt8" groups="base.group_no_one">
                                    <label class="col-lg-3" string="Url Oauth" for="s_url_oauth"/>
                                    <field name="s_url_oauth"/>
                                </div>
                                <div class="row mt8" groups="base.group_no_one">
                                    <label class="col-lg-3" string="Url Endpoint ZNS" for="s_url_endpoint"/>
                                    <field name="s_url_endpoint"/>
                                </div>

                                <div class="row mt8" groups="base.group_no_one">
                                    <label class="col-lg-3" string="Url Endpoint OA" for="s_url_endpoint_oa"/>
                                    <field name="s_url_endpoint_oa"/>
                                </div>

                                <div class="row mt8">
                                    <label class="col-lg-3" string="Zalo Mode" for="zalo_mode"/>
                                    <field name="zalo_mode"/>
                                </div>

                                 <field name="s_is_connected_zalo" invisible="1"/>
                                <div class="row mt8">
                                    <button class="btn btn-primary mx-2" name="btn_connect_zalo" type="object"
                                            string="Kết nối Zalo"
                                            attrs="{'invisible': [('s_is_connected_zalo', '=', True)]}"/>
                                     <button class="btn btn-primary mx-4" name="btn_disconnect_zalo" type="object"
                                            string="Ngắt kết nối Zalo"
                                            attrs="{'invisible': [('s_is_connected_zalo', '=', False)]}"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>