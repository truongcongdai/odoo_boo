<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="display_order_line_data_view_form" model="ir.ui.view">
            <field name="name">display_order_line_data_view_form</field>
            <field name="model">display.order.line.data</field>
            <field name="arch" type="xml">
                <form string="Dữ liệu bán hàng">
                    <group>
                        <group>
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                        </group>

                    </group>

                    <footer>
                        <button name="display_order_line_data" string="Submit" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="display_order_line_data_action" model="ir.actions.act_window">
            <field name="name">Dữ liệu bán hàng</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">display.order.line.data</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="display_order_line_data_menu" name="Dữ liệu bán hàng"
                  parent="sale.sale_menu_root"
                  action="advanced_sale.display_order_line_data_action" sequence="6"/>
    </data>
</odoo>