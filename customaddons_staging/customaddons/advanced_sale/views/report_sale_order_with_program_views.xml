<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_report_sale_order_program_pivot" model="ir.ui.view">
         <field name="name">report.sale.order.program.pivot</field>
         <field name="model">report.sale.order.program</field>
         <field name="arch" type="xml">
             <pivot string="Report Sales Order With Program" sample="1">
                 <field name="team_id" invisible="1"/>
                 <field name="date" interval="month" type="row"/>
                 <field name="price_subtotal" invisible="1"/>
                 <field name="discount" invisible="1"/>
                 <field name="nbr" invisible="1"/>
                 <field name="untaxed_amount_to_invoice" invisible="1"/>
                 <field name="untaxed_amount_invoiced" invisible="1"/>
                 <field name="volume" invisible="1"/>
                 <field name="weight" invisible="1"/>
                 <field name="tong_chiet_khau" type="measure"/>
                 <field name="gia_tong" type="measure"/>
                 <field name="doanh_thu" type="measure"/>
                 <field name="quantity_order" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="view_report_sale_order_program_graph" model="ir.ui.view">
         <field name="name">report.sale.order.program.graph</field>
         <field name="model">report.sale.order.program</field>
         <field name="arch" type="xml">
             <graph string="Report Sales Order With Program" type="line" sample="1">
                 <field name="date" interval="day"/>
                 <field name="price_subtotal" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="view_report_sale_order_program_tree" model="ir.ui.view">
        <field name="name">report.sale.order.program.tree</field>
        <field name="model">report.sale.order.program</field>
        <field name="arch" type="xml">
            <tree string="Report Sales Order With Program">
                <field name="date" widget="date"/>
                <field name="order_id" optional="show"/>
                <field name="partner_id" optional="hide"/>
                <field name="user_id" optional="show" widget="many2one_avatar_user"/>
                <field name="team_id" optional="show"/>
                <field name="company_id" optional="show" groups="base.group_multi_company"/>
                <field name="price_subtotal" optional="hide" sum="Sum of Untaxed Total"/>
                <field name="price_total" optional="show" sum="Sum of Total"/>
                <field name="state" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_report_sale_order_program_search" model="ir.ui.view">
        <field name="name">report.sale.order.program.search</field>
        <field name="model">report.sale.order.program</field>
        <field name="arch" type="xml">
            <search string="Report Sales Order With Program">
                <field name="date"/>
                <filter string="Date" name="year" invisible="1" date="date" default_period="this_year"/>
                <filter name="Quotations" string="Quotations" domain="[('state','in', ('draft', 'sent'))]"/>
                <filter name="Sales" string="Sales Orders" domain="[('state','not in',('draft', 'cancel', 'sent'))]"/>
                <separator/>
                <filter name="filter_date" date="date" default_period="this_month"/>
                <separator/>
                <field name="user_id"/>
                <field name="team_id"/>
                <field name="product_id"/>
                <field name="categ_id"/>
                <field name="partner_id"/>
                <field name="country_id"/>
                <field name="industry_id"/>
                <group expand="0" string="Extended Filters">
                    <field name="categ_id" filter_domain="[('categ_id', 'child_of', self)]"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </group>
                <group expand="1" string="Group By">
                    <filter string="Salesperson" name="User" context="{'group_by':'user_id'}"/>
                    <filter string="Sales Team" name="sales_channel" context="{'group_by':'team_id'}"/>
                    <filter string="Customer" name="Customer" context="{'group_by':'partner_id'}"/>
                    <filter string="Customer Country" name="country_id" context="{'group_by':'country_id'}"/>
                    <filter string="Customer Industry" name="industry_id" context="{'group_by':'industry_id'}"/>
                    <filter string="Product" name="Product" context="{'group_by':'product_id'}"/>
                    <filter string="Product Category" name="Category" context="{'group_by':'categ_id'}"/>
                    <filter name="status" string="Status" context="{'group_by':'state'}"/>
                    <filter string="Company" name="company" groups="base.group_multi_company" context="{'group_by':'company_id'}"/>
                    <separator/>
                    <filter string="Order Date" name="date" context="{'group_by':'date'}"/>
                    <group expand="1" string="Group By">
                        <filter string="CTKM" name="chuong_trinh_khuyen_mai_order" context="{'group_by':'chuong_trinh_khuyen_mai_order'}"/>
                    </group>
                </group>
            </search>
        </field>
    </record>

    <record id="action_report_sale_order_program" model="ir.actions.act_window">
        <field name="name">Báo cáo đơn hàng theo CTKM</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.sale.order.program</field>
        <field name="view_mode">graph,pivot</field>
        <field name="search_view_id" ref="view_report_sale_order_program_search"/>
        <field name="context">{'group_by_no_leaf':1,'group_by':[], 'search_default_chuong_trinh_khuyen_mai_order': 1}</field>
    </record>

    <menuitem name="Báo cáo đơn hàng theo CTKM" id="menu_report_sale_order_program" parent="sale.menu_sale_report" action="action_report_sale_order_program" sequence="99"
            groups="advanced_sale.s_boo_group_ke_toan,advanced_sale.s_boo_group_hang_hoa,advanced_sale.s_boo_group_marketing"/>

</odoo>