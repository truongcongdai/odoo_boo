<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="s_sale_order_loyalty_program_form" model="ir.ui.view">
            <field name="name">s.sale.order.loyalty.program.form</field>
            <field name="model">s.sale.order.loyalty.program</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="is_sale_order" widget="boolean_toggle"/>
                            </group>
                            <group>
                                <field name="s_points_currency"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="s_sale_order_loyalty_program_tree" model="ir.ui.view">
            <field name="name">s.sale.order.loyalty.program.tree</field>
            <field name="model">s.sale.order.loyalty.program</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="s_points_currency"/>
                    <field name="is_sale_order" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

