<odoo>
	<record id="request_vani_history_tree" model="ir.ui.view">
		<field name="name">request.vani.history.tree</field>
		<field name="model">request.vani.history</field>
		<field name="arch" type="xml">
			<tree string="Request vani history">
				<field name="request_id" />
				<field name="vani_url" />
				<field name="param" />
			</tree>
		</field>
	</record>

	<record id="request_vani_history_form" model="ir.ui.view">
		<field name="name">request.vani.history.form</field>
		<field name="model">request.vani.history</field>
		<field name="arch" type="xml">
			<form string="Request vani history">
				<header>
                    <button name="check_points_filling_info" type="object" string="Points Filling Info" />
                </header>
				<sheet>
					<group>
						<group>
							<field name="request_id" />
                            <field name="vani_url" />
                            <field name="param" />
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="request_vani_history_action" model="ir.actions.act_window">
		<field name="name">Request vani history</field>
		<field name="res_model">request.vani.history</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem id="request_vani_history_menu" name="Lịch sử đồng bộ Vani"
			  parent="point_of_sale.menu_point_rep" action="advanced_integrate_vani.request_vani_history_action"
			  sequence="10" groups="base.group_user"/>
</odoo>
