<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">

        <record id="cron_sync_m2_stock_qty" model="ir.cron">
            <field name="name">### Magento 2x Integrate: Synchronizing Stock Qty</field>
            <field name="model_id" ref="model_stock_quant"/>
            <field name="interval_number">60</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="False" />
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.cron_synchronizing_stock_qty()</field>
        </record>

        <record id="cron_sync_m2_stock_source" model="ir.cron">
            <field name="name">### Magento 2x Integrate: Synchronizing Stock &amp; Source</field>
            <field name="model_id" ref="model_magento_web_stock"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="False" />
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.cron_synchronizing_stock()</field>
        </record>

        <record id="s_cron_sync_customer_rank_magento" model="ir.cron">
            <field name="name">### Magento 2x Integrate: Synchronizing Customer Rank</field>
            <field name="doall" eval="True"/>
            <field name="priority" eval="True"/>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="interval_type">minutes</field>
            <field name="interval_number">5</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="model_id" ref="model_res_partner"/>
            <field name="code">model.cron_post_customer_rank_m2()</field>
        </record>

        <record id="s_cron_sync_product_magento" model="ir.cron">
            <field name="name">### Magento 2x Integrate: Synchronizing Product</field>
            <field name="doall" eval="True"/>
            <field name="priority" eval="True"/>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="interval_type">minutes</field>
            <field name="interval_number">5</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="model_id" ref="model_product_template"/>
            <field name="code">model.cron_post_product_m2()</field>
        </record>

        <record id="s_cron_sync_product_attribute_magento" model="ir.cron">
            <field name="name">### Magento 2x Integrate: Synchronizing Product Attribute</field>
            <field name="doall" eval="True"/>
            <field name="priority" eval="True"/>
            <field name="numbercall">-1</field>
            <field name="active" eval="True"/>
            <field name="interval_type">minutes</field>
            <field name="interval_number">5</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="model_id" ref="model_multi_channel_sale"/>
            <field name="code">model.cron_post_product_attributes_m2()</field>
        </record>

        <record id="s_cron_compute_loyalty_point_history" forcecreate='True' model="ir.cron">
            <field name="name">### Odoo cron compute loyalty point history</field>
            <field name="active">False</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">model.cron_compute_s_history_loyalty_point()</field>
        </record>

        <record id="cron_sync_history_loyalty_point_to_magento" model="ir.cron">
            <field name="name">### Magento 2x Integrate: Synchronizing history loyalty points</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model._cron_sync_customer_loyalty_point_to_magento()</field>
        </record>

        <record id="cron_update_sale_order_m2" forcecreate='True' model="ir.cron">
            <field name="name">###Magento 2x Integrate: Cron update sale order</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_s_magento_order_queue"/>
            <field name="state">code</field>
            <field name="code">model.cronjob_update_order_m2()</field>
            <field eval="True" name="doall"/>
        </record>

        <record id="cron_sync_update_partner_data" model="ir.cron">
            <field name="name">### Magento 2x Integrate: Synchronizing Update Partner</field>
            <field name="model_id" ref="model_res_partner"/>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="False" />
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field name="code">model.cron_sync_update_partner_data()</field>
        </record>

    </data>
</odoo>
