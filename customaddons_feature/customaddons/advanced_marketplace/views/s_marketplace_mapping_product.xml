        <record id="s_marketplace_mapping_product_view_tree" model="ir.ui.view">
            <field name="name">s_marketplace_mapping_product_view_tree</field>
            <field name="model">s.marketplace.mapping.product</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="s_product_id" readonly="True"/>
                    <field name="s_template_id" readonly="True"/>
                    <field name="error"/>
                    <field name="message"/>
                    <field name="s_mkp_deactive_product"/>
                    <field name="create_date" readonly="True"/>
                    <field name="s_check_mapping_product" readonly="True" invisible="1"/>
                    <field name="s_mapping_ecommerce"/>
                    <field name="s_error_type"/>
                </tree>
            </field>
        </record>
        <record id="s_marketplace_mapping_product_act_window" model="ir.actions.act_window">
            <field name="name">Sản phẩm đồng bộ bị lỗi</field>
            <field name="res_model">s.marketplace.mapping.product</field>
            <field name="context">{'search_default_group_marketplace': 1}</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Sản phẩm đồng bộ bị lỗi" id="s_marketplace_mapping_product" parent="sale.menu_sale_report"
                  action="s_marketplace_mapping_product_act_window"/>
