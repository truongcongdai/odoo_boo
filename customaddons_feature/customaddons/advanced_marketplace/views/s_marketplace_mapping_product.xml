<odoo>
    <data>
        <record id="s_marketplace_mapping_product_view_form" model="ir.ui.view">
            <field name="name">s_marketplace_mapping_product_view_form</field>
            <field name="model">s.marketplace.mapping.product</field>
            <field name="arch" type="xml">
                <form string="s_sale_order_error_form" create="false" edit="false" delete="true">
                    <sheet>
                        <group>
                            <group>
                                <field name="s_product_id" attrs="{'invisible': [('s_product_id', '=', False)]}"/>
                                <field name="s_template_id" attrs="{'invisible': [('s_template_id', '=', False)]}"/>
                                <field name="s_mapping_ecommerce"/>
                            </group>
                            <group>
                                <field name="s_check_mapping_product" invisible="1"/>
                                <field name="s_error_type"/>
                                <field name="message"/>
                                <field name="s_mkp_deactive_product"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="s_marketplace_mapping_product_view_search" model="ir.ui.view">
            <field name="name">s_marketplace_mapping_product_view_search</field>
            <field name="model">s.marketplace.mapping.product</field>
            <field name="arch" type="xml">
                <search string="Post API">
                    <filter name="group_marketplace" string="Loại" context="{'group_by':'s_error_type'}"/>
                </search>
            </field>
        </record>

