<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="done_ticket_after_24h_cron" forcecreate='True' model="ir.cron">
            <field name="name">###Facebook Done Ticket after 24h</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_helpdesk_ticket"/>
            <field name="state">code</field>
            <field name="code">model.cronjob_done_ticket_after_24h()</field>
            <field eval="True" name="doall"/>
        </record>

        <record id="get_refresh_token_facebook" forcecreate='True' model="ir.cron">
            <field name="name">###Facebook Refresh Token</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">2</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_res_config_settings"/>
            <field name="state">code</field>
            <field name="code">model._get_refresh_token_facebook()</field>
            <field eval="True" name="doall"/>
        </record>

        <record id="cron_create_mail_channel" forcecreate='True' model="ir.cron">
            <field name="name">###Cron create mail channel</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_s_mail_channel_queue"/>
            <field name="state">code</field>
            <field name="code">model.cron_create_mail_channel()</field>
            <field eval="True" name="doall"/>
        </record>

        <record id="cron_create_helpdesk_ticket" forcecreate='True' model="ir.cron">
            <field name="name">###Cron create helpdesk ticket</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_s_helpdesk_ticket_queue"/>
            <field name="state">code</field>
            <field name="code">model.cron_create_helpdesk_tickets()</field>
            <field eval="True" name="doall"/>
        </record>

    </data>
</odoo>