<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="ir_cron_last_update_buy" model="ir.cron">
            <field name="name">### Zalo: Last update buy</field>
            <field name="active" eval="True" />
            <field name="model_id" ref="model_res_partner"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.cronjob_last_update_buy()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="nextcall" eval="datetime.now() + timedelta(days=1)"/>
        </record>

        <record id="ir_cron_check_birthday" model="ir.cron">
            <field name="name">### Zalo: Check is birthday</field>
            <field name="active" eval="True" />
            <field name="model_id" ref="model_res_partner"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="code">model.cronjob_is_birthday()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
        </record>

        <record id="ir_cron_clear_zalo_remaining_quota" model="ir.cron">
            <field name="name">### Zalo: Clear zalo remaining quota</field>
            <field name="active" eval="True" />
            <field name="model_id" ref="model_res_config_settings"/>
            <field name="type">ir.actions.server</field>
            <field name="state">code</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
            <field name="code">
                env['ir.config_parameter'].set_param('advanced_marketing_automation.zalo_remaining_quota', False)
            </field>
        </record>

    </data>
</odoo>