<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_company_rfm_form_view" model="ir.ui.view">
            <field name="name">res.company.frm.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page name="rfm" string="RFM">
                        <div class="o_horizontal_separator">
                            Days Configuration
                        </div>

                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box" id="rfm_segmentation_sales_days">
                                    <div class="o_setting_left_pane"
                                         style="width:45px !important;text-align:right !important;">
                                        <field name="take_sales_from_x_days"/>
                                    </div>
                                    <div class="o_setting_right_pane" style="margin-left:50px !important;">
                                        <label for="take_sales_from_x_days"/>
                                        <div class="text-muted">
                                            RFM analysis will be calculated based on sales history of last X days
                                            here. <br/>X will be replaced by field value
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt16 o_settings_container">
                                <div class="col-12 col-lg-6 o_setting_box" id="rfm_segmentation_rfm_history">
                                    <div class="o_setting_left_pane"
                                         style="width:45px !important;text-align:right !important;">
                                        <field name="segment_history_days"/>
                                    </div>
                                    <div class="o_setting_right_pane" style="margin-left:50px !important;">
                                        <label for="segment_history_days"/>
                                        <div class="text-muted">
                                            RFM Segment history will be kept for X days. X will be replaced by field value
                                        </div>
                                    </div>
                                </div>
                            </div>

                        <group string="Segment Configuration" groups="setu_rfm_analysis.group_dynamic_rules">
                            <field nolabel="1" name="segment_configuration_ids"
                                   style="width:98% !important;margin:20px !important;"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>