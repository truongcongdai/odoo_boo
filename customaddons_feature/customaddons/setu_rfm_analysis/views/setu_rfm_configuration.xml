        <record id="setu_rfm_configuration_wizard" model="ir.ui.view">
            <field name="name">setu.rfm.configuration.wizard</field>
            <field name="model">setu.rfm.configuration</field>
            <field name="arch" type="xml">
                <form string="Setu RFM Configuration">
                    <sheet>
                        <group>
                            <div>
                                <strong>Just click on "Extract" button which will add the "RFM with POS" functionality, after that please follow below steps,</strong>
                            <br/>
                            <br/>
                                <field name="install_image" readonly="1" widget="image" nolabel="1"/>
                            </div>
                        </group>
                        <footer>
                            <button name="execute" string="Extract" type="object"
                                    class="oe_highlight"/>
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

