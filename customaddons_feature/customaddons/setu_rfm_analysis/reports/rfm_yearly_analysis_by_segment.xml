<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_rfm_analysis_by_segment_pivot" model="ir.ui.view">
         <field name="name">rfm.yearly.analysis.by.segment.pivot</field>
         <field name="model">rfm.yearly.analysis.by.segment</field>
         <field name="arch" type="xml">
             <pivot string="RFM Analysis" disable_linking="True">
                 <field name="segment_id" type="row"/>
                 <field name="calculation_year" type="col"/>
                 <field name="total_customers" type="measure"/>
                 <field name="ratio" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="view_rfm_analysis_by_segment_graph" model="ir.ui.view">
         <field name="name">rfm.yearly.analysis.by.segment.graph</field>
         <field name="model">rfm.yearly.analysis.by.segment</field>
         <field name="arch" type="xml">
             <graph string="RFM Analysis" type="bar" stacked="False">
                 <field name="segment_id" type="col"/>
<!--                 <field name="company_id" type="col"/>-->
                 <field name="calculation_year" type="row"/>
                 <field name="total_customers" type="measure"/>
                 <field name="ratio" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="actions_rfm_yearly_report" model="ir.actions.act_window">
        <field name="name">RFM Yearly Analysis Report</field>
        <field name="res_model">rfm.yearly.analysis.by.segment</field>
        <field name="view_mode">pivot,graph</field>
        <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>
    </record>

     <record id="view_rfm_analysis_by_segment_team_pivot" model="ir.ui.view">
         <field name="name">rfm.yearly.analysis.by.segment.team.pivot</field>
         <field name="model">rfm.yearly.analysis.by.segment.team</field>
         <field name="arch" type="xml">
             <pivot string="RFM Analysis" disable_linking="True">
                 <field name="team_id" type="row"/>
                 <field name="segment_id" type="row"/>
                 <field name="calculation_year" type="col"/>
                 <field name="total_customers" type="measure"/>
                 <field name="ratio" type="measure"/>
             </pivot>
         </field>
    </record>

    <record id="view_rfm_analysis_by_segment_team_graph" model="ir.ui.view">
         <field name="name">rfm.yearly.analysis.by.segment.team.graph</field>
         <field name="model">rfm.yearly.analysis.by.segment.team</field>
         <field name="arch" type="xml">
             <graph string="RFM Analysis" type="bar" stacked="False">
                 <field name="segment_id" type="col"/>
                 <field name="team_id" type="col"/>
                 <field name="calculation_year" type="row"/>
                 <field name="total_customers" type="measure"/>
                 <field name="ratio" type="measure"/>
             </graph>
         </field>
    </record>

    <record id="actions_rfm_yearly_team_report" model="ir.actions.act_window">
        <field name="name">RFM Yearly Analysis Report By Sales Team</field>
        <field name="res_model">rfm.yearly.analysis.by.segment.team</field>
        <field name="view_mode">pivot,graph</field>
<!--        <field name="domain">[('company_id','=',allowed_company_ids[0])]</field>-->
    </record>





    <menuitem id="rfm_menu_report" name="Reports" parent="root_rfm_menu" sequence="4"/>
    <menuitem id="rfm_menu_yearly_report" name="Yearly Analysis Report By Company" parent="rfm_menu_report" sequence="7"
              action="actions_rfm_yearly_report"/>
    <menuitem id="rfm_menu_yearly_report_by_team" name="Yearly Analysis Report By Sales Team"
              groups="setu_rfm_analysis.group_sales_team_rfm"
              parent="rfm_menu_report" sequence="8"
              action="actions_rfm_yearly_team_report"/>
</odoo>
