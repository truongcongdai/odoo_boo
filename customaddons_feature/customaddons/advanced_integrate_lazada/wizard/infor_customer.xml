<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="infor_customer_form_view" model="ir.ui.view">
        <field name="name">infor.customer.type.form.view</field>
        <field name="model">infor.customer</field>
        <field name="mode">primary</field>
        <field name="priority">25</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="order_id" string="Đơn hàng"/>
                    <field name="name"/>
                    <field name="street"/>
                    <field name="phone"/>
                </group>
                <footer>
                    <button name="btn_confirm" string="Cập nhật" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Hủy" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>