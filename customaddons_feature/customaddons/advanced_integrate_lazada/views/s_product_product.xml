<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="product_product_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">produc.product.normal.form.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="advanced_marketplace.product_product_normal_form_view_inherit_advance_marketplace"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']/group[@name='sale']/group[@name='marketplaces']" position="inside">
                <field name="to_sync_lazada"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_view_form_easy_inherit_lazada" model="ir.ui.view">
        <field name="name">produc.product.view.form.easy.inherit.lazada</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="to_sync_lazada"/>
            </xpath>
        </field>
    </record>
</odoo>