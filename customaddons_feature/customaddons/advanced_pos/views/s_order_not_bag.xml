<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="pos_not_bag_view_tree" model="ir.ui.view">
            <field name="name">pos.not.bag.view.tree</field>
            <field name="model">pos.order</field>
            <field name="priority">50</field>
            <field name="arch" type="xml">
                <tree create="0" edit="0" delete="0" decoration-info="state == 'draft'" decoration-muted="state == 'cancel'">
                    <field name="currency_id" invisible="1"/>
                    <field name="name" decoration-bf="1"/>
                    <field name="session_id" />
                    <field name="date_order"/>
                    <field name="pos_reference"/>
                    <field name="partner_id"/>
                    <field string="Cashier" name="user_id" widget="many2one_avatar_user"/>
                    <field name="amount_total" sum="Amount total" widget="monetary" decoration-bf="1"/>
                    <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state not in ('draft','cancel')"/>
                </tree>
            </field>
        </record>
        <record id="action_pos_pos_not_bag_form" model="ir.actions.act_window">
            <field name="name">Đơn hàng không lấy túi</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.order</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="advanced_pos.pos_not_bag_view_tree"/>
            <field name="domain">[('is_bag','=',True)]</field>
        </record>

        <menuitem name="Đơn hàng không lấy túi" id="s_order_not_bag" parent="point_of_sale.menu_point_rep" action="action_pos_pos_not_bag_form"/>

    </data>
</odoo>