    <record id="s_partner_default_filter" model='ir.ui.view'>
        <field name="name">Type Search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='type_person']" position="after">
                <filter name="filter_type" string="Loại địa chỉ: Liên hệ" domain="[('type','=','contact')]"/>
            </xpath>
        </field>
    </record>

        <record id="s_res_partner_action_customer" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="context">{'search_default_filter_type': 1}</field>
        </record>

        <record id="contacts.action_contacts" model="ir.actions.act_window">
            <field name="name">Contacts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">kanban,tree,form,activity</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
            <field name="context">{'search_default_filter_type': True}</field>
        </record>

    </data>
