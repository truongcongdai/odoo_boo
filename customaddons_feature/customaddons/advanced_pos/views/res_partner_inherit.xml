<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="s_view_res_partner_filter" model="ir.ui.view">
            <field name="name">s.view.res.partner.filter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <separator />
                    <filter name="old_customer" string="Valued Customer" domain="[('is_new_customer', '=', False)]" />
                    <filter name="new_customer" string="New Customer" domain="[('is_new_customer', '=', True)]" />
                    <separator />
                </xpath>
            </field>
        </record>

        <record id="res_partner_form_inherit" model="ir.ui.view">
            <field name="name">rse.partner.form.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='category_id']" position="after">
                    <field name="is_new_customer" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='vat']" position="before">
                    <field name="birthday"/>
                    <field name="gender"/>
                </xpath>

                <xpath expr="//field[@name='city']" position="attributes">
                    <attribute name="readonly">1</attribute>
                    <attribute name="attrs">{'invisible': [('state_id','!=',False)]}</attribute>
                </xpath>

                <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form//field[@name='comment']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form//field[@name='comment']" position="after">
                    <field name="partner_note" placeholder="Internal note..."/>
                </xpath>

                <xpath expr="//page[@name='internal_notes']/field[@name='comment']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//page[@name='internal_notes']/field[@name='comment']" position="after">
                    <field name="partner_note" placeholder="Internal note..."/>
                </xpath>

<!--                <xpath expr="//field[@name='phone']" position="after">-->
<!--                    <field name="phone_delivery" placeholder="Địa chỉ giao hàng..." attrs="{'invisible': [('type','=','delivery')]}"/>-->
<!--                </xpath>-->

                <xpath expr="//field[@name='city']" position="before">
                    <field name="district" readonly="1" attrs="{'invisible': [('district_id','!=',False)]}"/>
                    <span> - </span>
                </xpath>

                <xpath expr="//page[@name='sales_purchases']//field[@name='user_id']" position="before">
                    <field name="last_order" readonly="1" />
                    <field name="pos_create_customer" readonly="1" />
                </xpath>

                <xpath expr="//field[@name='vat']" position="after">
                    <field name="customer_ranked" readonly="1"/>
<!--                    <field name="related_customer_ranked"/>-->
                </xpath>

                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page string="Lịch sử tích điểm" name="history_points">
                        <field name="history_points_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="order_id"/>
                                <field name="sale_order_id"/>
                                <field name="diem_cong" sum="Total"/>
                                <field name="ly_do"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Lịch sử điểm Green" name="history_green_points" groups="base.group_system">
                        <field name="history_green_points_ids">
                            <tree editable="bottom">
                                <field name="ngay_tich_diem"/>
                                <field name="diem_cong" sum="Total"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Lịch sử tích điểm đơn Online cũ" name="s_history_loyalty_point_so" groups="base.group_system">
                        <field name="s_history_loyalty_point_so_ids" readonly="1">
                            <tree editable="bottom">
                                <field name="sale_order_id"/>
                                <field name="diem_cong" sum="Total"/>
                                <field name="ly_do"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//field[@name='loyalty_points']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>

                <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form//field[@name='street2']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form//field[@name='city']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//page[@name='contact_addresses']/field[@name='child_ids']/form//field[@name='state_id']" position="before">
                    <field name="ward_id" />
                    <field name="district_id" />
                </xpath>

            </field>
        </record>
