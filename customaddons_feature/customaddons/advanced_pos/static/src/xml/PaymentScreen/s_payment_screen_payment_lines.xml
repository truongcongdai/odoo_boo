<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.PaymentScreenPaymentLines" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('paymentline')]" position="after">
            <div class="payment_note">
                <input type="text" name="payment_note" t-att-value="line.payment_note" t-on-keyup="onKeyPaymentNote(line)" placeholder="Ghi chú thanh toán" />
            </div>
        </xpath>
        <xpath expr="//t[@t-else='']/div[hasclass('paymentline')]" position="after">
            <div class="payment_note">
                <input type="text" name="payment_note" t-att-value="line.payment_note" t-on-keyup="onKeyPaymentNote(line)" placeholder="Ghi chú thanh toán" />
            </div>
        </xpath>
    </t>
</templates>
