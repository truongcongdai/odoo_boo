<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_report_pivot_inherit" model="ir.ui.view">
        <field name="name">sale.report.pivot.inherit</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_pivot" />
        <field name="arch" type="xml">
            <xpath expr="//pivot/field[@name='price_subtotal']" position="before">
                <field name="order_id" string="Đơn hàng" type="measure"/>
                <field name="so_luong_san_pham" string="Số lượng sản phẩm" type="measure"/>
                <field name="tong_chiet_khau" string="Tổng chiết khấu và phân bổ trực tiếp" type="measure"/>
                <field name="price_total" string="Doanh thu" type="measure"/>
                <field name="gia_tong" string="Giá tổng" type="measure"/>
            </xpath>
            <xpath expr="//pivot/field[@name='price_subtotal']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    <record id="s_view_order_product_search_inherit" model="ir.ui.view">
        <field name="name">s_view_order_product_search_inherit</field>
        <field name="model">sale.report</field>
        <field name="inherit_id" ref="sale.view_order_product_search" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='company']" position="after">
                <separator/>
                <filter string="Thương hiệu" name="thuong_hieu_id" context="{'group_by':'thuong_hieu_id'}"/>
                <filter string="Kích thước" name="kich_thuoc_sp" context="{'group_by':'kich_thuoc_sp'}"/>
                <filter string="Màu sắc" name="mau_sac_sp" context="{'group_by':'mau_sac_sp'}"/>
                <filter string="Nhóm sản phẩm" name="categ_id" context="{'group_by':'categ_id'}"/>
                <filter string="CTKM" name="chuong_trinh_khuyen_mai_order" context="{'group_by':'chuong_trinh_khuyen_mai_order'}"/>
            </xpath>
            <xpath expr="//filter[@name='filter_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//filter[@name='filter_date']" position="after">
                <filter string="Order Date" name="date_order_sale_filter" date="date_order_sale_filter"/>
            </xpath>
        </field>
    </record>
</odoo>