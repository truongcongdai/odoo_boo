<odoo>
    <record id="s_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">s.res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='product_general_settings']/preceding-sibling::h2" position="before">
                <div id="vani_integrate" groups="base.group_no_one">
                    <h2>Vani Integrating</h2>
                    <div class="row mt16 o_settings_container" name="vani_integrate">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane mt8">
                                <div>
                                    <label for="vani_api_key"/>
                                    <div class="content-group mt16">
                                        <field name="vani_api_key" />
                                    </div>
                                    <label for="vani_api_url"/>
                                    <div class="content-group mt16">
                                        <field name="vani_api_url"/>
                                    </div>
                                    <label for="vani_point_api_url"/>
                                    <div class="content-group mt16">
                                        <field name="vani_point_api_url"/>
                                    </div>
                                </div>
                                <div class="mt8" groups="base.group_no_one">
                                    <button name="%(advanced_integrate_vani.request_vani_history_action)d" icon="fa-arrow-right"
                                    type="action" string="History request" class="btn-link"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <div>
                                    <label for="vani_membership_id"/>
                                    <div class="content-group mt16">
                                        <field name="vani_membership_id" />
                                    </div>
                                </div>
                                <div>
                                    <label for="vani_brand_id"/>
                                    <div class="content-group mt16">
                                        <field name="vani_brand_id" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
