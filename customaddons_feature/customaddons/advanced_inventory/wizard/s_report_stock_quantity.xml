<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="s_display_report_stock_quantity_form_view" model="ir.ui.view">
        <field name="name">s_display_report_stock_quantity_form_view</field>
        <field name="model">s.display.report.stock.quantity</field>
        <field name="arch" type="xml">
            <form string="Dự báo tồn kho">
                <group>
                    <group>
                        <field name="product_id" required="1" readonly="0"/>
                    </group>
                </group>

                <footer>
                    <button name="display_report_stock_quantity_data" string="Submit" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="s_display_report_stock_quantity_action" model="ir.actions.act_window">
        <field name="name"># Dự báo tồn kho</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">s.display.report.stock.quantity</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="# Dự báo tồn kho" id="s_display_report_stock_quantity_menu"
              parent="stock.menu_warehouse_report" action="advanced_inventory.s_display_report_stock_quantity_action" sequence="100"/>
</odoo>