<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="s_product_attribute_value_view_tree" model="ir.ui.view">
            <field name="name">s_product_attribute_value_view_tree</field>
            <field name="model">product.attribute.value</field>
            <field name="arch" type="xml">
                <tree string="s_product_attribute_value_tree">
                    <field name="attribute_id"/>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="is_custom"/>
                </tree>
            </field>
        </record>
        <record id="s_product_attribute_value_view_form" model="ir.ui.view">
            <field name="name">s_product_attribute_value_view_form</field>
            <field name="model">product.attribute.value</field>
            <field name="arch" type="xml">
                <form string="s_product_attribute_value_form">
                    <sheet>
                        <group>
                            <field name="attribute_id"/>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="is_custom"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="s_product_attribute_value_action" model="ir.actions.act_window">
            <field name="name">#Giá trị thuộc tính</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.attribute.value</field>
            <field name="view_mode">tree</field>
        </record>
        <menuitem name="#Giá trị thuộc tính" id="s_product_attribute_value_menu" parent="stock.menu_product_in_config_stock" action="advanced_inventory.s_product_attribute_value_action" sequence="4"/>
        <!-- This Menu Item Must have a parent -->
        <menuitem id="s_product_information_menu" name="#Thông tin sản phẩm" parent="stock.menu_stock_config_settings" sequence="4"/>
    </data>
</odoo>