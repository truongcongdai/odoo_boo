<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_setting_loyalty_program_view" model="ir.ui.view">
        <field name="name">res.config.settings.loyalty.program.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='o_settings_use_payment_terminals']" position="after">
                <div id="s_loyalty_program_reset_rank">
                    <h2>Reset hạng khách hàng</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div style="width: max-content;">
                                <div class="o_setting_right_pane mt8" style="width: 90%;">
                                    <div style="display:flex;align-items: center;">
                                        <div style="display:flex;align-items: center;">
                                            <label for="s_period_reset_customer_rank" style="margin-right: 20px;"/>
                                            <field name="s_period_reset_customer_rank" widget="date"/>
                                        </div>
                                        <div style="display:flex;align-items: center;">
                                            <label for="s_value_config_period" string="Sau" style="margin-right: 25px;"/>
                                            <div style="width: 50px;">
                                                <field name="s_value_config_period"/>
                                            </div>
                                            <span style="color: #091124;
                                                        font-size: 1.08333333rem;
                                                        line-height: 1.5;
                                                        font-weight: 500;">
                                                Năm
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
