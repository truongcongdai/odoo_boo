<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="s_stock_warehouse_shopee_form_inherit" model="ir.ui.view">
            <field name="name">s.stock.warehouse.shopee.form</field>
            <field name="model">stock.warehouse</field>
            <field name="inherit_id" ref="stock.view_warehouse"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="button_sync_warehouse_shopee"
                                string="Đồng bộ kho lên sàn TMĐT" type="object" class="btn-primary"
                                attrs="{'invisible': ['|',('e_commerce', '!=', 'shopee'), ('s_shopee_is_mapping_warehouse', '=', True)]}"/>
                    </header>
                </xpath>
                <xpath expr="//field[@name='code']" position="after">
                    <field name="s_shopee_warehouse_id" invisible="1"/>
                    <field name="s_shopee_is_mapping_warehouse" readonly="True" widget="boolean_toggle" attrs="{'invisible': [('e_commerce', '!=', 'shopee')]}"/>
                </xpath>
            </field>
        </record>


    </data>
</odoo>
