<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="s_product_product_int_tiktok_inherit" model="ir.ui.view">
        <field name="name">product.product.int.tiktok.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='chat_lieu']" position="after">
                <field name="is_synced_tiktok" readonly="True" attrs="{ 'invisible': [('is_synced_tiktok', '!=', True)] }"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_tiktok_normal_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.int.tiktok.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="advanced_marketplace.product_product_normal_form_view_inherit_advance_marketplace"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']/group[@name='sale']/group[@name='marketplaces']" position="inside">
                <field name="to_sync_tiktok"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_view_form_easy_inherit_tiktok" model="ir.ui.view">
        <field name="name">produc.product.view.form.easy.inherit.tiktok</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="to_sync_tiktok"/>
            </xpath>
        </field>
    </record>
</odoo>