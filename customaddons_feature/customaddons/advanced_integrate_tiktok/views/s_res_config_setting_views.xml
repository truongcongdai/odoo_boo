<odoo>
    <record id="res_config_setting_view_form_tiktok" model="ir.ui.view">
        <field name="name">res.config.tiktok.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='connectors_setting_container']" position="after">
                <div id="tiktok_integrate">
                    <h2>Tiktok Shop</h2>
                    <div class="row mt16 o_settings_container" name="tiktok_integrate">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane mt8">
                                <div>
                                    <label for="tiktok_service_id"/>
                                    <div >
                                        <field name="tiktok_service_id" password="True"/>
                                    </div>
                                </div>
                                <div>
                                    <label for="tiktok_app_key"/>
                                    <div >
                                        <field name="tiktok_app_key" password="True"/>
                                    </div>
                                </div>
                                <div>
                                    <label for="tiktok_app_secret"/>
                                    <div >
                                        <field name="tiktok_app_secret" password="True"/>
                                    </div>
                                </div>
                                <div>
                                    <label for="tiktok_mode"/>
                                    <div >
                                        <field name="tiktok_mode" />
                                    </div>
                                </div>
                                <div>
                                    <label for="s_tiktok_sync_stock"/>
                                    <div >
                                        <field name="s_tiktok_sync_stock" />
                                    </div>
                                </div>
                                <div class="s_setting_time_tiktok">
                                    <div>
                                        <label for="s_tiktok_sync_stock_end_of_day"/>
                                        <div >
                                            <field name="s_tiktok_sync_stock_end_of_day" />
                                        </div>
                                    </div>
                                    <div  attrs="{'invisible': [('s_tiktok_sync_stock_end_of_day', '=', False)]}">
                                        <label for="s_tiktok_set_time_start"/>
                                        <div >
                                            <field name="s_tiktok_set_time_start" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div class="o_settings_container mt8">
                                    <field name="is_connect_tiktok" invisible="1"/>
                                    <button name="btn_connect_tiktok" type="object" string="Connect Tiktok" attrs="{'invisible': [('is_connect_tiktok', '=', True)]}" class="btn btn-primary mx-2"/>
                                    <button name="btn_disconnect_tiktok" type="object" string="Disconnect Tiktok" attrs="{'invisible': [('is_connect_tiktok', '=', False)]}" class="btn btn-primary mx-2"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>