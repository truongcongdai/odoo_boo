<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="s_order_lazada_view_form" model="ir.ui.view">
        <field name="name">s.order.lazada.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
<!--            <xpath expr="//button[@name='action_quotation_send']" position="before">-->
<!--                <button name="btn_update_customer" string="Cập nhật khách hàng" type="object"-->
<!--                        attrs="{'invisible': [('state', '=', 'draft')]}"/>-->
<!--            </xpath>-->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="reverse_order_id" attrs="{'invisible': [('reverse_order_id', '=', False)]}" />
                <field name="lazada_order_id" attrs="{'invisible': ['|', ('is_lazada_order', '=', False), ('reverse_order_id', '!=', False)]}" />
                <field name="is_lazada_order" readonly="1" attrs="{'invisible': [('is_lazada_order', '=', False)]}"/>
                <field name="is_return_order_lazada" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="marketplace_lazada_order_status" string="Trạng thái đơn hàng" readonly="1" invisible="1"/>
            </xpath>
            <xpath expr="//label[@for='commitment_date']" position="before">
                <field name="shipping_provider_type" string="Phương thức vận chuyển" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='sale_order_status']" position="before">
                <field name="is_return_order_lazada" invisible="1"/>
                <field name="return_order_status_lazada" readonly="1" attrs="{'invisible': [('is_return_order_lazada', '=', False)]}"/>
            </xpath>
<!--            Cho phép sửa giá sp khi là đơn SO return của Lazada-->
<!--            <xpath expr="//field[@name='order_line']" position="attributes">-->
<!--                <attribute name="attrs">{'readonly': [('is_return_order_lazada', '!=', True)]}</attribute>-->
<!--            </xpath>-->
        </field>
    </record>

