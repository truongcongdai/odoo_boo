<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.PaymentScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('paymentmethods')]" position="after">
            <t t-if="isInputOTP">
<!--                <script type="text/javascript" src="/advanced_loyalty_program/static/src/js/payment_screen.js"></script>-->
                <div class="otp">
                    <div class="info-otp">
                        <label for="input-otp" class="label-otp">OTP</label>
                        <input type="text" t-on-keydown="_onChangeInputOtp" id="input-otp" name="otp" size="30"/>
                    </div>
                    <button type="button" t-on-click="send_back_otp" class="btn-send-otp">Gửi Mã OTP</button>
                    <t t-if="customer">
                         <span id="countdowntimer"><t t-esc="customer.countdowntimer"/></span>
                    </t>
                    <t t-if="customer">
                        <div id="customer">
                            <p class="phone-number"><t t-esc="customer.phone_number"/></p>
                            <p class="zalo-zns-template-id"><t t-esc="customer.zalo_zns_template_id"/></p>
                        </div>
                    </t>
                </div>
            </t>
        </xpath>
    </t>
</templates>