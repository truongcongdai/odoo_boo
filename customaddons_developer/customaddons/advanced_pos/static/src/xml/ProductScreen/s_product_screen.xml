<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//ProductsWidget" position="replace">
        </xpath>
        <xpath expr="//div[hasclass('screen-full-width')]" position="before">
            <ProductsWidget mobileSearchBarIsShown="props.mobileSearchBarIsShown" style="display:none;"/>
        </xpath>
        <xpath expr="//div[hasclass('leftpane')]/div[hasclass('pads')]" position="replace">
        </xpath>
        <xpath expr="//div[hasclass('rightpane')]" position="inside">
            <div data-is-boo-client="s_clientlist_screen" class="s_clientlist_screen">
                <ClientListScreen/>
            </div>
            <div class="pads">
                <div class="control-buttons">
                    <t t-if="env.isMobile and controlButtons.length > 3">
                        <div class="control-button" t-on-click="_displayAllControlPopup">More...</div>
                    </t>
                    <t t-else="">
                        <t t-foreach="controlButtons" t-as="cb" t-key="cb.name">
                            <t t-component="cb.component" t-key="cb.name"/>
                        </t>
                    </t>
                </div>
                <div class="subpads">
                    <t t-set="_actionName">Payment</t>
                    <ActionpadWidget client="client" actionName="_actionName" t-on-switchpane="switchPane"/>
                    <NumpadWidget activeMode="state.numpadMode"/>
                </div>
            </div>
        </xpath>
    </t>
</templates>