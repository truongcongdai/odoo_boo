<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderSummary" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('total')]" position="before">
            <div class="quantity-block">
                <span class="badge">Quantity: </span>
                <span class="value">
                        <t t-esc="productQuantity" />
                </span>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('subentry')]" position="after">
            <t t-if="giftcardCash.length > 0">
                <div class="giftcard_cash" style="font-size: 15px;">
                    <span class="cash">GiftCard Cash: </span>
                    <span class="value">
                        <t t-esc="giftcardCash"/>
                    </span>
                </div>
            </t>
        </xpath>
    </t>
</templates>
