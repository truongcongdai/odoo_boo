<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="s_product_pricelist_item_inherit_tree" model="ir.ui.view">
        <field name="name">s_product_pricelist_item_inherit_tree</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="product_tmpl_id" optional="hide"/>
                <field name="product_id"  optional="hide"/>
            </xpath>
        </field>
    </record>

    <record id="s_product_pricelist_item_inherit_search" model="ir.ui.view">
        <field name="name">s.product.pricelist.item.inherit.search</field>
        <field name="model">product.pricelist.item</field>
        <field name="inherit_id" ref="product.product_pricelist_item_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="product_tmpl_id" string="Sản phẩm cha"/>
                <field name="product_id" string="Sản phẩm biến thể"/>
            </xpath>
        </field>
    </record>

    <record id="s_product_pricelist_item" model="ir.actions.act_window">
        <field name="name">Chi tiết bảng giá</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.pricelist.item</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="s_product_pricelist_item_menu" name="Chi tiết bảng giá" parent="point_of_sale.pos_config_menu_catalog" sequence="100"
              action="s_product_pricelist_item"/>

</odoo>