        <record id="product_product_search_inherit" model="ir.ui.view">
            <field name="name">product.product.search.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_search_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="ma_san_pham" string="Mã sản phẩm"/>
                    <field name="ma_cu" string="Mã cũ"/>
                    <field name="ma_vat_tu" string="Mã vật tư"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="before">
                    <field name="default_code" string="SKU"/>
                </xpath>
            </field>
        </record>

        <record id="s_product_product_view_search" model="ir.ui.view">
            <field name="name">product.product.view.search</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <search string="Search Product">
                    <field name="name" filter_domain="[('name','ilike',self)]"/>
                    <field name="default_code" filter_domain="[('default_code','ilike', self)]"/>
                    <field name="barcode" filter_domain="[('barcode','ilike',self)]"/>
                    <field name="mau_sac" filter_domain="[('mau_sac','ilike',self)]"/>
                    <field name="kich_thuoc" filter_domain="[('kich_thuoc','ilike',self)]"/>
                    <field name="gioi_tinh" filter_domain="[('gioi_tinh','ilike',self)]"/>
                </search>
            </field>
        </record>

        <record id="action_update_product_size_color" model="ir.actions.server">
            <field name="name">Cập nhật kích thước, màu sắc sản phẩm</field>
            <field name="model_id" ref="model_product_product"/>
<!--            <field name="binding_model_id" ref="model_product_product"/>-->
            <field name="binding_model_id" eval="False"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                for rec in records:
                    rec._compute_variants_attribute()
            </field>
        </record>

