<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_product_form_inherit" model="ir.ui.view">
            <field name="name">product.product.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='detailed_type']" position="after">
                    <field name="ma_san_pham" readonly="1"/>
                    <field name="thuong_hieu" readonly="1"/>
                    <field name="dong_hang" readonly="1"/>
                    <field name="season" readonly="1"/>
                    <field name="chat_lieu" readonly="1"/>
                    <field name="item_code" invisible="1" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='default_code']" position="attributes">
                    <attribute name="string">SKU</attribute>
                    <attribute name="required">1</attribute>
                </xpath>

                <xpath expr="//field[@name='default_code']" position="after">
                    <field name="chung_loai" readonly="1"/>
                    <field name="ma_cu" readonly="1"/>
                    <field name="ma_vat_tu" required="0"/>
                    <field name="sku" invisible="1"/>
                    <field name="bo_suu_tap" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='barcode']" position="after">
                    <field name="mau_sac" readonly="1"/>
                    <field name="kich_thuoc" readonly="1"/>
                    <field name="gioi_tinh" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='gioi_tinh']" position="after">
                    <field name="is_product_green" readonly="1"/>
                </xpath>

                <xpath expr="//notebook" position="inside">
                    <page name="coupon_program" string="Khuyến mãi">
                        <field name="coupon_ids" readonly="1">
                            <tree domain="[('is_expires_ctkm','=',False)]">
                                <field name="coupon_id" />
                                <field name="pos_config_ids" widget="many2many_tags" />
                                <field name="description" optional="show" />
                            </tree>
                        </field>
                    </page>
                </xpath>

                <xpath expr="//field[@name='product_template_variant_value_ids']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//div[hasclass('oe_title')]" position="inside">
                    <field name="product_template_attribute_value_ids" widget="many2many_tags" readonly="1" groups="product.group_product_variant"/>
                </xpath>

                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="s_note"/>
                </xpath>

            </field>
        </record>

