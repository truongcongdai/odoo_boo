<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="s_channel_order_mappings_search" model="ir.ui.view">
        <field name="name">s.channel.order.mappings.search</field>
        <field name="model">channel.order.mappings</field>
        <field name="inherit_id" ref="odoo_multi_channel_sale.channel_order_mappings_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='odoo_partner_id']" position="after">
                <filter name="wo_store_order_id" string="No Remote ID" domain="[('store_order_id', '=', False)]" />
            </xpath>
        </field>
    </record>

    <record id="s_channel_order_mappings_form" model="ir.ui.view">
        <field name="name">s.channel.order.mappings.form</field>
        <field name="model">channel.order.mappings</field>
        <field name="inherit_id" ref="odoo_multi_channel_sale.channel_order_mapping_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='store_order_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
