    <record id="s_stock_warehouse_view_search" model="ir.ui.view">
        <field name="name">stock.warehouse.search</field>
        <field name="model">stock.warehouse</field>
        <field name="inherit_id" ref="stock.stock_warehouse_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="code" string="Mã kho"/>
            </xpath>
        </field>
    </record>

    <record id="action_select_add_warehouse_magento_2x" model="ir.actions.server">
        <field name="name">Thêm vào danh sách đồng bộ kho Magento</field>
        <field name="model_id" ref="model_stock_warehouse"/>
        <field name="binding_model_id" ref="model_stock_warehouse"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">records.select_add_warehouse_magento_2x()</field>
    </record>

    <record id="action_select_cancel_warehouse_magento_2x" model="ir.actions.server">
        <field name="name">Xóa khỏi danh sách đồng bộ kho Magento</field>
        <field name="model_id" ref="model_stock_warehouse"/>
        <field name="binding_model_id" ref="model_stock_warehouse"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">records.select_cancel_warehouse_magento_2x()</field>
    </record>

