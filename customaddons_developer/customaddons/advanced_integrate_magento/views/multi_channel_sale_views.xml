<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="s_multi_channel_view_form" model="ir.ui.view">
        <field name="name">s.multi.channel.view.form</field>
        <field name="model">multi.channel.sale</field>
        <field name="inherit_id" ref="odoo_multi_channel_sale.multi_channel_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='state']" position="before">
                <button name="get_long_life_token" string="GET LONG-LIFE TOKEN" type="object"
                    attrs="{'invisible': [('long_life_token', '!=', False)]}" class="btn btn-warning"
                    confirm="Long-live token is your input, use it with your own risk!"
                    groups="base.group_erp_manager" />
                <button name="clean_long_life_token" string="CLEAN LONG-LIFE TOKEN" type="object"
                    attrs="{'invisible': [('long_life_token', '=', False)]}" class="btn btn-danger"
                    confirm="This action will clean all Magento 2x Long-life Token. Do you wish to continue?" />
            </xpath>

            <xpath expr="//group[@name='credentials']" position="before">
                <div class="row mt16 o_settings_container">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane" />
                        <div class="o_setting_right_pane">
                            <label for="long_life_token"/>
                            <div class="text-muted">
                                eg: yajzc7ls19lw5poahxkdp3iz1zxlkz6m
                            </div>
                            <div class="text-primary">
                                <b>
                                    <field name="long_life_token" groups="base.group_no_one"
                                           attrs="{'readonly':[('state','=','validate')]}"
                                           password="1"
                                    />
                                </b>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

            <xpath expr="//field[@name='blog_url']//ancestor::div[hasclass('o_setting_box')]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

            <xpath expr="//field[@name='store_url']//ancestor::div[hasclass('o_setting_box')]" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>

        </field>
    </record>
</odoo>