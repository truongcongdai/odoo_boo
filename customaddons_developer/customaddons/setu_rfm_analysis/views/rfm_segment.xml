                                                <field name="total_orders_ratio" widget="percentpie"/>
                                            </span>
                                        </a>
                                    </div>
                                    <div class="col-4 mt16">
                                        <a name="open_orders" type="object" >
                                            <span >
                                                <field name="total_revenue_ratio" widget="percentpie"/>
                                            </span>
                                        </a>
                                    </div>
                                    <!--                                    <div class="col-4 mt16">-->
                                    <!--                                        <a name="open_pos_orders" type="object">-->
                                    <!--                                            <span class="font-weight-bold">-->
                                    <!--                                                <field name="total_pos_orders_ratio" widget="percentpie" string="PosOrders"/>-->
