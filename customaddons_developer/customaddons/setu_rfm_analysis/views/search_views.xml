<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="search_rfm_crm_lead" model="ir.ui.view">
            <field name="name">rfm.crm.lead.search</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.view_crm_case_opportunities_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//search/group" position="inside">
                    <filter string="Segment" name="group_by_rfm_segment_id" domain="[]"
                            context="{'group_by':'rfm_segment_id'}"/>
                </xpath>
            </field>
        </record>

        <record id="search_rfm_quotation" model="ir.ui.view">
            <field name="name">rfm.quotation.search</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_sales_order_filter"/>
            <field name="arch" type="xml">

                <xpath expr="//search/group" position="inside">
                    <filter string="Segment" name="rfm_segment_id" domain="[]"
                            context="{'group_by':'rfm_segment_id'}"/>
                </xpath>

            </field>
        </record>

        <record id="search_rfm_mailing" model="ir.ui.view">
            <field name="name">rfm.mailings.search</field>
            <field name="model">mailing.mailing</field>
            <field name="inherit_id" ref="mass_mailing.view_mail_mass_mailing_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search/group" position="inside">
                    <filter string="Segment" name="rfm_segment_id" domain="[]"
                            context="{'group_by':'rfm_segment_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>