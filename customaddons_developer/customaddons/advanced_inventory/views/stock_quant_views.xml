<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="quant_search_view_inherit" model="ir.ui.view">
        <field name="name">quant.search.view.inherit.advanced.inventory</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.quant_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sku" filter_domain="[('sku', '=ilike', self)]" />
                <field name="barcode" filter_domain="[('barcode', '=ilike', self)]" />
                <field name="ma_san_pham" filter_domain="[('ma_san_pham', '=ilike', self)]" />
                <field name="ma_cu" filter_domain="[('ma_cu', '=ilike', self)]" />
                <field name="mau_sac" filter_domain="[('mau_sac', '=ilike', self)]" />
                <field name="kich_thuoc" filter_domain="[('kich_thuoc', '=ilike', self)]" />
                <field name="gioi_tinh" filter_domain="[('gioi_tinh', '=ilike', self)]" />
            </xpath>
            <xpath expr="//group" position="inside">
                <separator />
                <filter string="Thương hiệu" name="thuong_hieu" context="{'group_by':'thuong_hieu'}"/>
                <filter string="Nhóm sản phẩm" name="category_id" context="{'group_by':'category_id'}"/>
                <filter string="Màu" name="fltr_color" context="{'group_by': 'mau_sac'}" />
                <filter string="Size" name="fltr_size" context="{'group_by': 'kich_thuoc'}" />
                <filter string="Giới tính" name="fltr_gender" context="{'group_by': 'gioi_tinh'}" />
                <separator />
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_tree_editable_inherit" model="ir.ui.view">
        <field name="name">view.stock.quant.tree.editable.inherit.advanced.inventory</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sku" optional="hide" />
                <field name="ma_san_pham" optional="hide" groups="advanced_sale.s_boo_group_thu_ngan"/>
                <field name="ma_cu" optional="hide" groups="advanced_sale.s_boo_group_thu_ngan"/>
                <field name="barcode" optional="hide" />
                <field name="mau_sac" optional="hide" />
                <field name="kich_thuoc" optional="hide" />
                <field name="gioi_tinh" optional="hide" />
                <field name="s_product_uom_qty" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='product_uom_id']" position="after">
                <field name="is_expired_warning" optional="hide" />
                <field name="time_product_expired_warning" optional="show" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='inventory_quantity']" position="after">
                <field name="s_inventory_quantity" string="Giá trị số lượng đã đếm" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="s_view_stock_quant_tree_inherit" model="ir.ui.view">
        <field name="name">view.stock.quant.tree.inherit.advanced.inventory</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="ma_san_pham" optional="hide" groups="advanced_sale.s_boo_group_thu_ngan"/>
                <field name="ma_cu" optional="hide" groups="advanced_sale.s_boo_group_thu_ngan"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_form_editable_inherit" model="ir.ui.view">
        <field name="name">view.stock.quant.form.editable.inherit.advanced.inventory</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_form_editable" />
        <field name="arch" type="xml">
            <xpath expr="//label[@for='inventory_quantity']" position="attributes">
                <attribute name="string">Số lượng đã đếm</attribute>
            </xpath>
        </field>
    </record>

    <record id="s_view_stock_quant_tree_editable_inherit" model="ir.ui.view">
        <field name="name">s.view.stock.quant.tree.editable.inherit</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='value']" position="after">
                <field name="is_expired_warning" optional="hide" />
                <field name="ma_san_pham" optional="hide" groups="advanced_sale.s_boo_group_thu_ngan"/>
                <field name="ma_cu" optional="hide" groups="advanced_sale.s_boo_group_thu_ngan"/>
                <field name="time_product_expired_warning" optional="show" readonly="1"/>
                <field name="inventory_quantity" optional="show" groups="advanced_sale.s_boo_group_administration"/>
                <field name="inventory_diff_quantity" optional="show" />
                <field name="user_id" string="Người dùng" optional="show" />
                <field name="available_quantity" optional="hide" />
                <field name="reserved_quantity" optional="hide" />
            </xpath>
             <xpath expr="//field[@name='inventory_quantity']" position="after">
                <field name="s_inventory_quantity" string="Giá trị số lượng đã đếm" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>