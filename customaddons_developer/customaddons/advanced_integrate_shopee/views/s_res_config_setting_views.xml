<odoo>
    <record id="res_config_setting_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='connectors_setting_container']" position="after">
                <div id="shopee_integrate">
                    <h2>Shopee Shop</h2>
                    <div class="row mt16 o_settings_container" name="shopee_integrate">

                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane mt8">
                                <div>
                                    <label for="shopee_app_key"/>
                                    <div>
                                        <field name="shopee_app_key" password="True"/>
                                    </div>
                                </div>
                                <div>
                                    <label for="shopee_app_secret"/>
                                    <div>
                                        <field name="shopee_app_secret" password="True"/>
                                    </div>
                                </div>
                                <div>
                                    <label for="shopee_url"/>
                                    <div>
                                        <field name="shopee_url"/>
                                        <field name="is_error_token_shopee" invisible="1"/>
                                    </div>
                                </div>
                                <div>
                                    <label for="s_shopee_sync_stock"/>
                                    <div>
                                        <field name="s_shopee_sync_stock"/>
                                    </div>
                                </div>
                            </div>
                            <div class="s_setting_time_shopee o_setting_right_pane mt8">
                                <div>
                                    <label for="s_shopee_sync_stock_end_of_day"/>
                                    <div>
                                        <field name="s_shopee_sync_stock_end_of_day"/>
                                    </div>
                                </div>
                                <div attrs="{'invisible': [('s_shopee_sync_stock_end_of_day', '=', False)]}">
                                    <label for="s_shopee_set_time_start"/>
                                    <div>
                                        <field name="s_shopee_set_time_start"/>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <div class="o_settings_container mt8">
                                    <field name="is_connect_shopee" invisible="1"/>
                                    <button name="btn_connect_shopee" type="object" string="Connect shopee"
                                            attrs="{'invisible': [('is_connect_shopee', '=', True)]}"
                                            class="btn btn-primary mx-2"/>
                                    <button name="btn_disconnect_shopee" type="object" string="Disconnect shopee"
                                            attrs="{'invisible': [('is_connect_shopee', '=', False)]}"
                                            class="btn btn-primary mx-2"/>
                                    <button name="button_refresh_token_shopee" type="object" string="Refresh Token"
                                            attrs="{'invisible': ['|',('is_connect_shopee', '=', False), ('is_error_token_shopee', '=', 'False')]}"
                                            class="btn btn-primary mx-2"/>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
