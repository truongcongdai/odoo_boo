<odoo>
    <data>
        <record id="s_sale_order_shopee_error_view_form" model="ir.ui.view">
            <field name="name">s_sale_order_shopee_error_view_form</field>
            <field name="model">s.sale.order.shopee.error</field>
            <field name="arch" type="xml">
                <form string="s_sale_order_shopee_error_form" create="false" edit="false" delete="false">
                    <header>
                        <button name="recreating_an_error_order_shopee" type="object" class="btn btn-primary"
                                string="Tạo lại order" attrs="{'invisible':[('return_created', '=',True)]}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="dbname"/>
                                <field name="level"/>
                                <field name="message"/>
                            </group>
                            <group>
                                <field name="s_shopee_id_order"/>
                                <field name="return_created" attrs="{'invisible':[('return_created', '=',False)]}"/>
                                <field name="s_error_token_shopee" attrs="{'invisible':[('s_error_token_shopee', '=',False)]}"/>
                                <field name="order_status"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="s_sale_order_shopee_error_view_tree" model="ir.ui.view">
            <field name="name">s_sale_order_shopee_error_view_tree</field>
            <field name="model">s.sale.order.shopee.error</field>
            <field name="arch" type="xml">
                <tree create="false" edit="false" delete="false">
                    <field name="dbname" readonly="True"/>
                    <field name="level" readonly="True"/>
                    <field name="message" readonly="True"/>
                    <field name="s_shopee_id_order" readonly="True"/>
                    <field name="return_created" readonly="True"/>
                    <field name="order_status" readonly="True"/>
                    <field name="create_date" readonly="True"/>
                </tree>
            </field>
        </record>
        <record id="s_sale_order_shopee_error_act_window" model="ir.actions.act_window">
            <field name="name">Đơn hàng Shopee bị lỗi</field>
            <field name="res_model">s.sale.order.shopee.error</field>
            <field name="domain">[('s_shopee_id_order','!=', False)]</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem name="Đơn hàng Shopee bị lỗi" id="sale_order_shopee_error" parent="sale.menu_sale_report"
                  action="s_sale_order_shopee_error_act_window"/>
    </data>
</odoo>